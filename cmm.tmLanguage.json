{
  "scopeName": "source.communica",
  "fileTypes": ["cmm"],
  "patterns": [
    {
      "name": "comment.line.number-sign.communica",
      "match": "#.*"
    },
    {
      "name": "keyword.control.communica",
      "match": "\\b(fonu|diksa|si|alors|sinon|pour|tantque)\\b"
    },
    {
      "name": "variable.other.communica",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "constant.numeric.communica",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "constant.numeric.decimal.communica",
      "match": "\\b\\d+\\.\\d+\\b"
    },
    {
      "name": "string.quoted.double.communica",
      "match": "\"(\\\\.|[^\\\\\"])*\""
    },
    {
      "name": "keyword.control.conditional.communica",
      "match": "\\b(si|alors|sinon)\\b"
    },
    {
      "name": "keyword.control.loop.communica",
      "match": "\\b(pour|tantque)\\b"
    },
    {
      "name": "entity.name.function.communica",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*\\("
    },
    {
      "name": "keyword.operator.communica",
      "match": "[+\\-*/=<>!]+"
    }
  ]
}
